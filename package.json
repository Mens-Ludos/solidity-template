{
  "name": "polcraz-solidity-template",
  "version": "0.0.1",
  "description": "Project that contains my personal template project for solidity",
  "keywords": [
    "hardhat",
    "template",
    "polcraz"
  ],
  "author": "Ilya Kubariev <kubarievilya@gmail.com>",
  "license": "AGPL-3.0",
  "files": [
    "/contracts/**/*.sol",
    "/artifacts/contracts/*.json"
  ],
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "coverage": "hardhat coverage",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "build": "yarn clean && yarn compile",
    "test": "hardhat test",
    "lint:ts": "eslint \"**/*.{js,ts}\"",
    "lint:ts:fix": "eslint \"**/*.{js,ts}\" --quiet --fix",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint \"contracts/**/*.sol\" --quiet --fix",
    "format:ts": "prettier \"**/*.{js,ts,json}\" --check",
    "format:ts:fix": "prettier \"**/*.{js,ts,json}\" --write",
    "format:sol": "prettier \"contracts/**/*.sol\" --check",
    "format:sol:fix": "prettier \"contracts/**/*.sol\" --write",
    "format:yml": "prettier \"**/*.{yml,yaml}\" --check",
    "format:yml:fix": "prettier \"**/*.{yml,yaml}\" --write",
    "check-codestyle": "yarn lint:sol && yarn format:sol && yarn lint:ts && yarn format:ts && yarn format:yml",
    "update-codestyle": "yarn lint:sol:fix && yarn format:sol:fix && yarn lint:ts:fix && yarn format:ts:fix && yarn format:yml:fix"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/prompt": "^17.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.9.6",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^8.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  }
}
